  head
    title MUD
    link(rel='stylesheet', href='/normalize.css/normalize.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body()
    div(class='header')
      nav(class='navbar left-navbar')
        a(href='mud') Play
        a(href='about') About
      nav(class='navbar right-navbar')
        if isLoggedIn
          a(href='account') Account
          a(href='account') Logout
        else
          a(id='log-in', href='login') Log in
          a(id='log-in', href='signup') Register
    div.content
      block content
    script(type='text/javascript', src='/jquery/dist/jquery.min.js')
