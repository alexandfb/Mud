extends layout

block content
  div(class='register')
    if error
      span.error= errorMessage
    else
      span.error.hidden
    form(class='register-form' method='post', action='/signup')
      ul(class="input-list style-1 clearfix")
        input(type="text", id="su-username" placeholder="username", name="username")
        input(type="text", id="su-email" placeholder="e-mail", name="email")
        input(type="text", id="su-passwd" placeholder="password", name="password")
        input(type="text", id="su-retypepasswd" placeholder="retype password", name="retypepassword")
      
      div(class='buttons')
        section(class='flat')
          button(id='signup-button' type='submit') Sign up!
